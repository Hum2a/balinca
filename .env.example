# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Application Configuration
REACT_APP_NAME=LifeSmart Financial Quiz
REACT_APP_DESCRIPTION="Master your financial future with LifeSmart's interactive financial literacy quiz"
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# API Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_API_TIMEOUT=30000

# Analytics and Tracking
REACT_APP_GA_TRACKING_ID=your_ga_tracking_id
REACT_APP_ENABLE_ANALYTICS=true

# Feature Flags
REACT_APP_ENABLE_QUIZ=true
REACT_APP_ENABLE_SIMULATOR=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_OFFLINE_MODE=true

# Security
REACT_APP_MAX_LOGIN_ATTEMPTS=5
REACT_APP_SESSION_TIMEOUT=1800
REACT_APP_ENABLE_RATE_LIMITING=true

# Cache Configuration
REACT_APP_CACHE_DURATION=3600
REACT_APP_ENABLE_SERVICE_WORKER=true

# Error Reporting
REACT_APP_ERROR_REPORTING_LEVEL=warning
REACT_APP_ENABLE_ERROR_REPORTING=true

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_PERFORMANCE_SAMPLE_RATE=100

# Quiz Configuration
REACT_APP_QUIZ_TIME_LIMIT=1800
REACT_APP_QUIZ_PASS_THRESHOLD=70
REACT_APP_QUIZ_RETRY_DELAY=86400

# Simulation Configuration
REACT_APP_SIM_MAX_PORTFOLIO_VALUE=1000000
REACT_APP_SIM_MIN_PORTFOLIO_VALUE=1000
REACT_APP_SIM_DEFAULT_ROUND_VALUE=5000

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS=false
REACT_APP_ENABLE_REACT_DEVTOOLS=false
REACT_APP_ENABLE_DEBUG_MODE=false

# API Keys (Third-party Services)
REACT_APP_MARKET_DATA_API_KEY=your_market_data_api_key
REACT_APP_NEWS_API_KEY=your_news_api_key

# Deployment
REACT_APP_DEPLOYMENT_REGION=us-central1
REACT_APP_DEPLOYMENT_ENVIRONMENT=production

# Note: This is an example configuration file.
# Create a .env file and replace the values with your actual configuration.
# Never commit the actual .env file to version control. 